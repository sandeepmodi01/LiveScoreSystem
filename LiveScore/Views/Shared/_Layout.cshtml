@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LiveScore</title>
    <link rel="icon" href="~/images/bowled.jpg">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/NavigationMenu.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <img src="~/images/bowled.jpg" width="60" height="60" class="d-inline-block align-top rounded-circle" alt="Image...">
                <a class="navbar-brand" style="margin-left : 5px;" asp-area="" asp-controller="LiveScore" asp-action="Index">LiveScore</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        @if (SignInManager.IsSignedIn(User))
                        {

                            <li class="nav-item">
                                <a class="btn btn-outline-info" style="margin-top : 10px ; margin-left : 10px; margin-bottom : 5px;" asp-area="" asp-controller="Team" asp-action="Index"> Team </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-info" style="margin-top : 10px ; margin-left : 10px; margin-bottom : 5px;" asp-area="" asp-controller="Player" asp-action="Index"> Player </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-info" style="margin-top : 10px ; margin-left : 10px; margin-bottom : 5px;" asp-area="" asp-controller="Match" asp-action="Index"> Match </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-info" style="margin-top : 10px ; margin-left : 10px; margin-bottom : 5px;" asp-area="" asp-controller="Extras" asp-action="Index"> Extras </a>
                            </li>

                        }

                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-primary" style="margin-top : 10px; margin-left : 10px; margin-bottom : 5px;" asp-area="" asp-controller="LiveScore" asp-action="Teams"> Teams </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-primary" style="margin-top : 10px; margin-left : 10px; margin-bottom : 5px;" asp-area="" asp-controller="LiveScore" asp-action="Players"> Players </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-primary" style="margin-top : 10px; margin-left : 10px; margin-bottom : 5px;" asp-area="" asp-controller="LiveScore" asp-action="Live"> Matches </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-primary" style="margin-top : 10px; margin-left : 10px; margin-bottom : 5px;" asp-area="" asp-controller="LiveScore" asp-action="ContactUs"> Contact Us </a>
                            </li>

                        }

                        <form class="d-flex">
                            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" style="margin-top : 10px; margin-left : 100px; margin-bottom : 5px;">
                            <button class="btn btn-outline-success" type="submit" style="margin-top : 10px; margin-left : 10px; margin-bottom : 5px;">Search</button>
                        </form>
                    </ul>

                </div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - LiveScore - <a asp-area="" asp-controller="LiveScore" asp-action="Index">Home</a>

            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

            <a href="https://www.facebook.com">
                <img src="~/images/logo-facebook.svg" alt="facebook" width="30" height="30">
            </a> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

            <a href="https://www.twitter.com">
                <img src="~/images/logo-twitter.svg" alt="twitter" width="30" height="30">
            </a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

            <a href="https://www.instagram.com">
                <img src="~/images/logo-instagram.svg" alt="instagram" width="30" height="30">
            </a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

            <a href="https://www.twitch.tv">
                <img src="~/images/logo-twitch.svg" alt="twitch" width="30" height="30">
            </a>

        </div>

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
