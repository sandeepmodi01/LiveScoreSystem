@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"> <img class="d-inline-block align-top rounded-circle" src="~/images/User.jpg" width="70"> </a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "LiveScore", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link  btn-outline-primary" style="margin-top : 10px">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="btn btn-outline-primary" style="margin-top : 10px ; margin-left : 10px;" asp-area="Identity" asp-page="/Account/Register" > Register </a>
       
    </li>
    <li class="nav-item">
        <a class="btn btn-outline-primary" style="margin-top : 10px ; margin-left : 10px;" asp-area="Identity" asp-page="/Account/Login"> Login </a>
    </li>
}
</ul>
