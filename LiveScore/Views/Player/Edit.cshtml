@model LiveScore.Models.PlayerModel

@{
    ViewData["Title"] = "Edit";
}

@*<h1>Edit</h1>

<h4>PlayerModel</h4>
<hr />*@
<div class="col-10">
    <img src="~/images/avatar.jpg" width="50" height="50" class="d-inline-block align-top rounded-circle" alt="Image.."> <font size="6"> Edit Details</font>    
</div>
<br />
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsBatsman" /> @Html.DisplayNameFor(model => model.IsBatsman)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="BattingStyle" class="control-label"></label>
                <input asp-for="BattingStyle" class="form-control" />
                <span asp-validation-for="BattingStyle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BowlingStyle" class="control-label"></label>
                <input asp-for="BowlingStyle" class="form-control" />
                <span asp-validation-for="BowlingStyle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamId" class="control-label"></label>
                <select asp-for="TeamId" class="form-control" asp-items="ViewBag.TeamId"></select>
                <span asp-validation-for="TeamId" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label>Select Image</label>
                <input type="file" name="file" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
